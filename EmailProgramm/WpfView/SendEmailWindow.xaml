<Window x:Class="WpfView.SendEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        mc:Ignorable="d"
        
        Title="Email schreiben"
        Height="300"
        Width="300"
        MinHeight="300"
        MinWidth="400">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Label x:Name="label" Content="Sender" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="textBox"  Height="23" Margin="94,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <Label x:Name="label1" Content="Empfänger" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="textBox1" Height="23" Margin="94,38,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <Label x:Name="label2" Content="Betreff" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="textBox2" Height="23" Margin="94,72,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <Label x:Name="label3" Content="Nachricht" Margin="10,103,10,0"/>
            </Grid>
            <DockPanel 
                DockPanel.Dock="Bottom"
                >
                <Button x:Name="SendEmail" DockPanel.Dock="Right" Width="100" Content="Senden" Margin="10,10,10,10" Click="SendEmail_Click"></Button>
                <Button x:Name="AbortSendEmail" DockPanel.Dock="Right" Width="100" Content="Abbrechen" Margin="10,10,0,10" Click="AbortSendEmail_Click"></Button>
                <Grid></Grid>
            </DockPanel>
            <TextBox x:Name="textBox3" TextWrapping="Wrap" Margin="10,0,10,0"/>
        </DockPanel>
    </Grid>
</Window>
