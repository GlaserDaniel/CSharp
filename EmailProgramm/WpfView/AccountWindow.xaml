<Window x:Class="WpfView.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        mc:Ignorable="d"

        Title="Account"
        Height="300"
        Width="300">
    <DockPanel>
        <Grid
            DockPanel.Dock="Top">
            <Label x:Name="userLabel" Content="Username" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="99"/>
            <TextBox x:Name="userTextBox" Text="{Binding user}" Height="23" Margin="114,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Der Benutzername oder die Email-Adresse des Kontos"/>
            <Label x:Name="emailLabel" Content="Email" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="99"/>
            <TextBox x:Name="emailTextBox" Text="{Binding email}" Height="23" Margin="114,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Die Email-Adresse des Kontos"/>
            <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="99"/>
            <PasswordBox x:Name="passwordBox" Height="23" Margin="114,72,10,0" VerticalAlignment="Top"/>
            <Label x:Name="serverLabel" Content="SMTP-Server" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="99" Height="26"/>
            <TextBox x:Name="serverTextBox" Text="{Binding server}" Height="23" Margin="114,103,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Die Adresse des SMTP-Servers"/>
            <Label x:Name="portLabel" Content="Port" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Width="99" Height="26"/>
            <TextBox x:Name="portTextBox" Text="{Binding port}" Height="23" Margin="114,134,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Der Port des SMTP-Servers"/>
        </Grid>
        <DockPanel
            DockPanel.Dock="Bottom"
            >
            <Button x:Name="SaveAccount" DockPanel.Dock="Right" Width="100" Content="Speichern" Margin="10,10,10,10" Click="SaveAccount_Click"></Button>
            <Button x:Name="Abort" DockPanel.Dock="Right" Width="100" Content="Abbrechen" Margin="10,10,0,10" Click="Abort_Click"></Button>
            <Grid></Grid>
        </DockPanel>
        <Grid></Grid>
    </DockPanel>
</Window>
